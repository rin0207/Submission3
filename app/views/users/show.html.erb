<div class="body">
	<div class="container">
	<% if @book.errors.any? %>
	<%= render 'books/error', books: @books %>
	<% end %>
	<div class="row">
	 <div class="col-xs-3">
	  <div>
		<%= render 'users/userinfo', user: @user %>
	  </div>
	  <div>
		<%= render 'books/newbook', books: @books %>
	  </div>
	 </div>
	  <div class="col-xs-9">
		<h3>Books</h3>
		<table class="table table-hover table-inverse">
			<tr class="books-list">
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
			<% @books.each do |book| %>
			<tr class="books-body">
				<td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, class:"profile-thumb", fallback:"no_image.jpg" %></td>
				<td><%= link_to book.title, book_path(@books.ids)  %></td>
				<td><%= link_to book.body, book_path(@books.ids)  %></td>
			</tr>
			<% end %>
		</table>
	  </div>
    </div>
    </div>
</div>
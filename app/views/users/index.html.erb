<div class="body">
<div class="container">
	<% if @book.errors.any? %>
	<%= render 'books/error', books: @books %>
	<% end %>
	<div class="row">
	 <div class="col-xs-3">
	  <div>
		<%= render 'users/userinfo', user: @user %>
	  </div>
	  <div>
		<%= render 'books/newbook', books: @books %>
	  </div>
	 </div>
	  <div class="col-xs-9">
		<h3>Users</h3>
		<table class="table">
			<tr class="books-list">
				<th>image</th>
				<th>name</th>
			</tr>
			<% @users.each do |user| %>
			<tr class="books-body">
				<td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, class:"profile-thumb", fallback:"no_image.jpg" %></td>
				<td><%= user.name %></td>
				<td><%= link_to "Show", user_path(user.id) %></td>
			</tr>
			<% end %>
		</table>
	  </div>
	</div>
</div>
</div>
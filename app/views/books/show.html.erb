
<div class="body">
<div class="container">
	<% if @book.errors.any? %>
	<%= render 'books/error', books: @books %>
	<% end %>
    <div class="row">
     <div class="col-xs-3">
	  <div>
		<%= render 'users/userinfo', user: @user %>
	  </div>
	  <div>
		<%= render 'books/newbook', books: @books %>
	  </div>
	 </div>
	  <div class="col-xs-9">
		<h3>Book detail</h3>
		<table class="table">
		<td>
			<%= link_to(user_path(@user)) do %>
			<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, class:"profile-thumb", fallback:"no_image.jpg" %>
			<%= @user.name %>
			<% end %>
		</td>
		<td><%= link_to @books.title, book_path(@books.id) %></td>
		<td><%= @books.body %></td>
		<% if @user.id == current_user.id %>
		<td><%= link_to "Edit", edit_book_path(@books.id), {class: "btn-sm btn-success"} %></td>
		<td><%= link_to "Destroy",destroy_book_path(@books.id), {method: :delete, class: "btn-sm btn-danger"} %></td>
		<% end %>
	     </table>

	  </div>
	</div>
</div>
</div>
<div class="body">
<div class="container">
	<% if @book.errors.any? %>
	<%= render 'books/error', books: @books %>
	<% end %>
	<div class="row">
	 <div class="col-xs-3">
	  <div>
		<%= render 'users/userinfo', user: @user %>
	  </div>
	  <div>
		<%= render 'books/newbook', books: @books %>
	  </div>
	 </div>
	  <div class="col-xs-9">
		<h3>Books</h3>
		<table class="table table-hover table-inverse">
			<tr class="books-list">
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
			<% @books.each do |book| %>
			<tr class="books-body">
				<td><%= link_to(user_path(book.user_id)) do %>
					<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class:"profile-thumb", fallback:"no_image.jpg" %>
					<% end %>
				</td>
				<td><%= link_to book.title, book_path(book.id) %></td>
				<td><%= link_to book.body, book_path(book.id) %></td>
			</tr>
			<% end %>
		</table>
	  </div>
	</div>
</div>
</div>
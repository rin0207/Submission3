<div class="body">
<div class="container">
	<% if @book.errors.any? %>
	<%= render 'books/error', books: @books %>
	<% end %>
	<div class="row">
	 <div class="col-xs-3">
	  <div>
		<%= render 'users/userinfo', books: @books %>
	  </div>
	  <div>
		<%= render 'books/newbook', books: @books %>
	  </div>
	 </div>
	  <div class="col-xs-9">
		<h3>Users</h3>
		<table class="table">
			<tr class="books-list">
				<th>image</th>
				<th>name</th>
			</tr>
			<% @books.each do |book| %>
			<tr class="books-body">
				<td></td>
				<td><%= link_to user.name,  %></td>
				<td><%= link_to "show", book_path(@book.id) %></td>
			</tr>
			<% end %>
		</table>
	  </div>
	</div>
</div>
</div>